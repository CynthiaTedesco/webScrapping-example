<div class="row">
  <form method="get" action="/results" class="form-horizontal">
    <div class="form-group">
      <label for="destino" class="col-sm-2 control-label">Destino</label>
      <div class="col-sm-10">
        <select name="destino" class="form-control">
          <option value="San+Carlos+de+Bariloche">Bariloche</option>
        </select>
      </div>
    </div>
    <div class="form-group date">
      <label for="fromdate" class="col-sm-2 control-label">Desde</label>
      <div class="col-sm-10">
        <input type="text" id="fromdate" name="fromdate" class="form-control datepicker">
      </div>
    </div>

    <div class="form-group date">
      <label for="todate" class="col-sm-2 control-label">Hasta</label>
      <div class="col-sm-10">
        <input type="text" id="todate" name="todate" class="form-control datepicker">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-default">Buscar</button>
      </div>
    </div>
  </form>
</div>


{{#if statusmsg}}
  <h1>{{statusmsg}}</h1>
{{/if}}
<hgroup class="mb20">
   <h1>Search Results</h1>
   <h2 class="lead"><strong class="text-danger">{{total}}</strong> results were found for the search for <strong class="text-danger">{{params.ss}}</strong></h2>
 </hgroup>


{{#each results}}
   <section class="col-xs-12 col-sm-6 col-md-12">
     <article class="search-result row">
     <div class="col-xs-12 col-sm-12 col-md-3">
       <a href="#" title="{{this.title}}" class="thumbnail">
         <img src="{{this.image}}" alt="{{this.title}}" />
       </a>
     </div>

     <div class="col-xs-12 col-sm-12 col-md-2">
       <ul class="meta-search">
         <li><i class="glyphicon glyphicon-calendar"></i> <span>{{this.badge}}</span></li>
         <li><i class="glyphicon glyphicon-time"></i> <span>{{this.demand}}</span></li>
         <li><i class="glyphicon glyphicon-tags"></i> <span><a href="https://www.google.com.ar/maps/@{{this.coordinates}},15z?hl=en">Mapa</a></span></li>
       </ul>
     </div>

     <div class="col-xs-12 col-sm-12 col-md-7 excerpet">
       <h3><a href="{{this.url}}" title="{{this.title}}" target="_blank">{{this.title}}</a></h3>
       <p>{{this.description}}</p>
       <strong>$ {{this.price}}</strong>
     </div>
     <span class="clearfix borda"></span>
   </article>

  </section>
{{/each}}
